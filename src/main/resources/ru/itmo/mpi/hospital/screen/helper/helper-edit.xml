<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://helperEdit.caption"
        focusComponent="form">
    <data>
        <instance id="helperDc"
                  class="ru.itmo.mpi.hospital.entity.Helper">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="helperDc">
                <column width="350px">
                    <textField id="usernameField" property="username"/>
                    <textField id="firstNameField" property="firstName"/>
                    <textField id="lastNameField" property="lastName"/>
                    <checkBox id="isMaleField" property="isMale"/>
                    <textField id="emailField" property="email"/>
                    <checkBox id="activeField" property="active"/>
                    <textField id="timeZoneIdField" property="timeZoneId"/>
                    <dateField id="workStartDateField" property="workStartDate"/>
                    <comboBox id="socialStatusField" property="socialStatus"/>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
