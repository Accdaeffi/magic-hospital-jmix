<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://diseaseHealerBrowse.caption"
        focusComponent="diseasesTable">
    <data readOnly="true">
        <collection id="diseasesDc"
                    class="ru.itmo.mpi.hospital.entity.Disease">
            <fetchPlan extends="_base"/>
            <loader id="diseasesDl">
                <query>
                    <![CDATA[select e from Disease e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="diseasesTable" spacing="true">
        <filter id="filter"
                dataLoader="diseasesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="diseasesTable"
                    width="100%"
                    dataContainer="diseasesDc">
            <actions>
            </actions>
            <columns>
                <column id="title"/>
                <column id="symptoms"/>
                <column id="recipe"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
