<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://prayerHealerBrowse.caption"
        focusComponent="prayersTable">
    <data readOnly="true">
        <collection id="prayersDc"
                    class="ru.itmo.mpi.hospital.entity.Prayer">
            <fetchPlan extends="_base">
                <property name="god" fetchPlan="_base"/>
                <property name="diseaseCase"/>
            </fetchPlan>
            <loader id="prayersDl">
                <query>
                    <![CDATA[select e from Prayer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout expand="prayersTable" spacing="true">
        <filter id="filter"
                dataLoader="prayersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="prayersTable"
                    width="100%"
                    dataContainer="prayersDc">
            <actions>
                <action id="view" type="view">
                    <properties>
                        <property name="screenClass" value="ru.itmo.mpi.hospital.screen.prayer.PrayerHealerView"/>
                    </properties>
                </action>
            </actions>
            <columns>
                <column id="god" />
                <column id="diseaseCase.patient" />
                <column id="prayText"/>
                <column id="prayerStatus"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="viewBtn" action="prayersTable.view"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
