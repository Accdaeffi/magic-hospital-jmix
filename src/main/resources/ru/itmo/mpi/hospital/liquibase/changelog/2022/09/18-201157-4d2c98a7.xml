<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="magic-hospital">
        <addColumn tableName="PRAYER">
            <column name="disease_case_id" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="magic-hospital">
        <addForeignKeyConstraint baseColumnNames="disease_case_id" baseTableName="PRAYER"
                                 constraintName="FK_PRAYER_ON_DISEASE_CASE" referencedColumnNames="ID"
                                 referencedTableName="DISEASE_CASE"/>
    </changeSet>
    <changeSet id="3" author="magic-hospital">
        <dropColumn columnName="prayer_id" tableName="disease_case"/>
    </changeSet>
</databaseChangeLog>